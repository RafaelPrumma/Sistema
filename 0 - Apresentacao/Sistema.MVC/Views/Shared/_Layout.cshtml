@using Microsoft.AspNetCore.Http
@using System.Globalization
@inject Sistema.CORE.Interfaces.ITemaService TemaService
@{
    var userId = Context.Session.GetInt32("UserId") ?? 0;
    var userName = Context.Session.GetString("UserName") ?? "Usuário";
    var tema = userId > 0 ? await TemaService.BuscarPorUsuarioIdAsync(userId) : null;
    string headerColor = tema?.CorHeader ?? "#0d6efd";
    string leftColor = tema?.CorBarraEsquerda ?? "#0d6efd";
    string rightColor = tema?.CorBarraDireita ?? "#f8f9fa";
    string footerColor = tema?.CorFooter ?? "#0d6efd";
    bool modoEscuro = tema?.ModoEscuro ?? false;
    string bodyClass = modoEscuro ? "bg-dark text-white" : "bg-light text-dark";

    string GetTextClass(string hex)
    {
        if (string.IsNullOrWhiteSpace(hex)) return "text-dark";
        hex = hex.TrimStart('#');
        if (hex.Length == 6)
        {
            var r = int.Parse(hex[..2], NumberStyles.HexNumber);
            var g = int.Parse(hex[2..4], NumberStyles.HexNumber);
            var b = int.Parse(hex[4..6], NumberStyles.HexNumber);
            var lum = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
            return lum > 0.5 ? "text-dark" : "text-white";
        }
        return "text-dark";
    }

    string headerText = GetTextClass(headerColor);
    string leftText = GetTextClass(leftColor);
    string rightText = GetTextClass(rightColor);
    string footerText = GetTextClass(footerColor);
    string headerNavbarClass = headerText == "text-white" ? "navbar-dark" : "navbar-light";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema.MVC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast@1.4.0/dist/css/iziToast.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izimodal/css/iziModal.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
</head>
<body class="@bodyClass">
    <div class="d-flex flex-column min-vh-100">
        <header class="navbar @headerNavbarClass" style="background-color:@headerColor">
            <div class="container-fluid">
                <a class="navbar-brand @headerText" asp-controller="Home" asp-action="Index">Sistema.MVC</a>
                <div class="dropdown ms-auto">
                    <a class="nav-link dropdown-toggle @headerText" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @userName
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">Alterar Senha</a></li>
                        <li><a class="dropdown-item" href="#" id="temaBtn">Tema</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Sair</a></li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="flex-grow-1 d-flex">
            <nav class="sidebar" style="background-color:@leftColor">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @leftText" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @leftText" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link @leftText" asp-controller="Tema" asp-action="Edit">Tema</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @leftText" asp-controller="Configuracao" asp-action="Index">Configurações</a>
                    </li>
                </ul>
            </nav>
            <div class="content flex-grow-1 p-3">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <footer class="footer @footerText mt-auto" style="background-color:@footerColor">
            <div class="container">
                &copy; 2025 - Sistema.MVC - <a class="@footerText" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/izitoast@1.4.0/dist/js/iziToast.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/izimodal/js/iziModal.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <div id="temaSidebar" class="tema-sidebar @rightText" style="background-color:@rightColor" data-aos="fade-left">
        <form asp-controller="Tema" asp-action="Edit" method="post" class="p-3">
            <h5>Preferências de Tema</h5>
            <div class="mb-3">
                <label class="form-label">Modo</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="ModoEscuro" value="false" @(modoEscuro ? "" : "checked") />
                    <label class="form-check-label">Claro</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="ModoEscuro" value="true" @(modoEscuro ? "checked" : "") />
                    <label class="form-check-label">Escuro</label>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="CorHeader">Cor do Header</label>
                <input type="color" class="form-control form-control-color" name="CorHeader" id="CorHeader" value="@headerColor" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="CorBarraEsquerda">Barra Lateral Esquerda</label>
                <input type="color" class="form-control form-control-color" name="CorBarraEsquerda" id="CorBarraEsquerda" value="@leftColor" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="CorBarraDireita">Barra Lateral Direita</label>
                <input type="color" class="form-control form-control-color" name="CorBarraDireita" id="CorBarraDireita" value="@rightColor" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="CorFooter">Rodapé</label>
                <input type="color" class="form-control form-control-color" name="CorFooter" id="CorFooter" value="@footerColor" />
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
