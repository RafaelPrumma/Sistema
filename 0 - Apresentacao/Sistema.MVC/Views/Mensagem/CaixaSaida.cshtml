@model Sistema.MVC.Models.MensagemViewModel
@{
    ViewData["Title"] = "Caixa de Saída";
}

@await Html.PartialAsync("_PageHeader", new PageHeaderViewModel
{
    Title = "Mensagens",
    Description = "Visualize mensagens enviadas."
})

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Assunto</th>
                    <th>Destinatário</th>
                    <th>Data</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var m in Model.Mensagens)
            {
                <tr>
                    <td>@m.Assunto</td>
                    <td>@m.DestinatarioNome</td>
                    <td>@m.DataInclusao.ToLocalTime().ToString("g")</td>
                    <td><a href="@Url.Action("Detalhe", new { id = m.Id })">Abrir</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-end">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">Caixa de entrada</a>
        <a href="@Url.Action("Nova")" class="btn btn-primary">Nova mensagem</a>
    </div>
</div>
